{
    "id": "org.mkiol.Jupii",
    "default-branch": "stable",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.15",
    "sdk": "org.kde.Sdk",
    "rename-desktop-file": "jupii.desktop",
    "rename-icon": "jupii",
    "rename-appdata-file": "jupii.metainfo.xml",
    "finish-args": [
        "--device=dri",
        "--share=ipc",
        "--share=network",
        "--socket=x11",
        "--socket=wayland",
        "--socket=pulseaudio",
        "--filesystem=home",
        "--talk-name=org.freedesktop.Tracker1.Steroids",
        "--talk-name=org.freedesktop.Notifications"
    ],
    "command": "jupii",
    "modules": [
        {
            "name": "taglib",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DCMAKE_BUILD_TYPE=Release"
            ],
            "cleanup": [
                "/bin",
                "*.a",
                "/include",
                "/lib/pkgconfig",
                "/share"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/taglib/taglib/archive/v1.11.1.tar.gz",
                    "sha256": "b6d1a5a610aae6ff39d93de5efd0fdc787aa9e9dc1e7026fa4c961b26563526b"
                }
            ]
        },
        {
            "name": "libx264",
            "config-opts": [
                "--enable-pic",
                "--enable-static",
                "--extra-cflags=-fno-finite-math-only"
            ],
            "cleanup": [
                "/bin",
                "*.a",
                "/include",
                "/lib/pkgconfig",
                "/share"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://code.videolan.org/videolan/x264.git",
                    "branch": "master"
                }
            ]
        },
        {
            "name": "lame",
            "config-opts": [
                "--with-pic",
                "--enable-static",
                "--disable-shared",
                "--disable-frontend"
            ],
            "cleanup": [
                "/bin",
                "*.a",
                "*.la",
                "/include",
                "/lib/pkgconfig",
                "/share"
            ],
            "sources": [
                {
                    "type": "svn",
                    "url": "https://svn.code.sf.net/p/lame/svn/trunk/lame"
                },
                {
                    "type": "patch",
                    "path": "../libs/lame/lame.patch"
                }
            ]
        },
        {
            "name": "nv-codec-headers",
            "buildsystem": "simple",
            "cleanup": [
                "/bin",
                "/include",
                "/lib/pkgconfig",
                "/share"
            ],
            "build-commands": ["make install PREFIX=$FLATPAK_DEST"],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/FFmpeg/nv-codec-headers.git",
                    "branch": "master"
                }
            ]
        },
        {
            "name": "ffmpeg",
            "config-opts": [
                "--disable-programs",
                "--disable-doc",
                "--disable-everything",
                "--enable-pic",
                "--enable-gpl",
                "--enable-protocol=file",
                "--enable-encoder=libx264",
                "--enable-encoder=aac",
                "--enable-decoder=rawvideo",
                "--enable-muxer=mp4",
                "--enable-parser=h264",
                "--enable-nonfree",
                "--enable-encoder=libx264rgb",
                "--enable-indev=xcbgrab",
                "--enable-rpath",
                "--enable-libx264",
                "--enable-muxer=mpegts",
                "--enable-demuxer=aac",
                "--enable-demuxer=avi",
                "--enable-demuxer=h264",
                "--enable-demuxer=m4v",
                "--enable-demuxer=mov",
                "--enable-demuxer=ogg",
                "--enable-demuxer=mpegvideo",
                "--enable-demuxer=matroska",
                "--enable-demuxer=wav",
                "--enable-decoder=pcm_u8",
                "--enable-decoder=pcm_u32le",
                "--enable-decoder=pcm_u32be",
                "--enable-decoder=pcm_u24le",
                "--enable-decoder=pcm_u24be",
                "--enable-decoder=pcm_u16le",
                "--enable-decoder=pcm_u16be",
                "--enable-decoder=pcm_s8",
                "--enable-decoder=pcm_s32le",
                "--enable-decoder=pcm_s32be",
                "--enable-decoder=pcm_s24le",
                "--enable-decoder=pcm_s24be",
                "--enable-decoder=pcm_s16le",
                "--enable-decoder=pcm_s16be",
                "--enable-decoder=pcm_f64le",
                "--enable-decoder=pcm_f64be",
                "--enable-decoder=pcm_f32le",
                "--enable-decoder=pcm_f32be",
                "--enable-demuxer=pcm_u32be",
                "--enable-demuxer=pcm_u32le",
                "--enable-demuxer=pcm_u8",
                "--enable-demuxer=pcm_alaw",
                "--enable-demuxer=pcm_f32be",
                "--enable-demuxer=pcm_f32le",
                "--enable-demuxer=pcm_f64be",
                "--enable-demuxer=pcm_f64le",
                "--enable-demuxer=pcm_s16be",
                "--enable-demuxer=pcm_s16le",
                "--enable-demuxer=pcm_s24be",
                "--enable-demuxer=pcm_s24le",
                "--enable-demuxer=pcm_s32be",
                "--enable-demuxer=pcm_s32le",
                "--enable-demuxer=pcm_s8",
                "--enable-demuxer=pcm_u16be",
                "--enable-demuxer=pcm_u16le",
                "--enable-demuxer=pcm_u24be",
                "--enable-demuxer=pcm_u24le",
                "--enable-libmp3lame",
                "--enable-encoder=libmp3lame",
                "--enable-muxer=mp3",
                "--enable-static",
                "--disable-shared",
                "--enable-debug",
                "--enable-cuda",
                "--enable-nvenc",
                "--enable-encoder=h264_nvenc",
                "--enable-encoder=h264_vaapi",
                "--enable-bsf=h264_mp4toannexb"
            ],
            "cleanup": [
                "/bin",
                "*.a",
                "/include",
                "/lib/pkgconfig",
                "/share",
                "/lib/cmake"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://ffmpeg.org/releases/ffmpeg-4.1.3.tar.bz2",
                    "sha256": "29a679685bd7bc29158110f367edf67b31b451f2176f9d79d0f342b9e22d6a2a"
                }
            ]
        },
        {
            "name": "libmicrohttpd",
            "config-opts": [
                "--enable-static",
                "--disable-shared",
                "--disable-doc",
                "--disable-examples",
                "--without-gnutls"
            ],
            "cleanup": [
                "/bin",
                "*.a",
                "*.la",
                "/include",
                "/lib/pkgconfig",
                "/share"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://ftpmirror.gnu.org/libmicrohttpd/libmicrohttpd-0.9.72.tar.gz",
                    "sha1": "82bbb87c1cae15a0819b1899acb02006c4d24dce"
                }
            ]
        },
        {
            "name": "expat",
            "config-opts": [
                "--enable-static",
                "--disable-shared"
            ],
            "cleanup": [
                "/bin",
                "*.a",
                "*.la",
                "/include",
                "/lib/pkgconfig",
                "/share"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/libexpat/libexpat/releases/download/R_2_2_10/expat-2.2.10.tar.gz",
                    "sha1": "042cd99f79d7141e9eec12cc215646aac3f307db"
                }
            ]
        },
        {
            "name": "libcurl",
            "config-opts": [
                "--enable-static",
                "--disable-shared",
                "--without-ssl",
                "--without-brotli",
                "--disable-pop3",
                "--disable-mqtt",
                "--disable-netrc",
                "--disable-rtsp",
                "--disable-smb",
                "--disable-smtp",
                "--disable-socketpair",
                "--disable-sspi",
                "--disable-telnet",
                "--disable-tftp",
                "--disable-tls-srp",
                "--disable-hsts",
                "--disable-imap",
                "--disable-ldap",
                "--disable-ldaps",
                "--disable-dnsshuffle",
                "--disable-doh",
                "--disable-file",
                "--disable-ftp",
                "--disable-gopher",
                "--disable-ntlm-wb",
                "--without-fish-functions-dir",
                "--without-libidn2",
                "--without-libmetalink",
                "--without-ca-bundle",
                "--without-libpsl",
                "--without-librtmp",
                "--without-mesalink",
                "--without-nghttp2",
                "--without-nghttp3",
                "--without-ngtcp2",
                "--without-nss",
                "--without-quiche",
                "--without-schannel",
                "--without-secure-transport",
                "--without-winidn"
            ],
            "cleanup": [
                "/bin",
                "*.a",
                "*.la",
                "/include",
                "/lib/pkgconfig",
                "/share"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://curl.se/download/curl-7.74.0.tar.gz",
                    "sha1": "cd7239cf9223b39ade86a14eb37fe68f5656eae9"
                }
            ]
        },
        {
            "name": "npupnp",
            "config-opts": [
                "--enable-static",
                "--disable-shared"
            ],
            "cleanup": [
                "/bin",
                "*.a",
                "*.la",
                "/include",
                "/lib/pkgconfig",
                "/share"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://framagit.org/medoc92/npupnp.git",
                    "branch": "master",
                    "commit": "bad26d73fc13ebb60bf0e9a9d4a03646034f1aa7"
                },
                {
                    "type": "patch",
                    "path": "../libs/libupnpp/npupnp.patch"
                }
            ]
        },
        {
            "name": "libupnpp",
            "config-opts": [
                "--enable-static",
                "--disable-shared"
            ],
            "cleanup": [
                "/bin",
                "*.a",
                "*.la",
                "/include",
                "/lib/pkgconfig",
                "/share"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://framagit.org/medoc92/libupnpp.git",
                    "branch": "master",
                    "commit": "3310a04f5cba362d91ab9bde608456b7b3516554"
                }
            ]
        },
        {
            "name": "gumbo",
            "config-opts": [
                "--enable-static",
                "--disable-shared"
            ],
            "cleanup": [
                "/bin",
                "*.a",
                "*.la",
                "/include",
                "/lib/pkgconfig",
                "/share"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/google/gumbo-parser.git",
                    "tag": "v0.10.1"
                }
            ]
        },
        {
            "name": "jupii",
            "buildsystem": "simple",
            "build-commands": [
                "mkdir -p build/flatpak",
                "cd build/flatpak && qmake FLATPAK=1 PREFIX=$FLATPAK_DEST ../../desktop/jupii.pro && make && make install"
            ],
            "post-install": [
                "mv $FLATPAK_DEST/bin/jupii $FLATPAK_DEST/bin/jupii_bin",
                "echo \"QT_STYLE_OVERRIDE=breeze QT_QUICK_CONTROLS_FALLBACK_STYLE=org.kde.desktop jupii_bin\">$FLATPAK_DEST/bin/jupii",
                "chmod +x $FLATPAK_DEST/bin/jupii" 
            ],
            "sources": [
                {
                    "type": "dir",
                    "path": "../"
                }
            ]
        }
    ]
}
